      \ 'linter_ok': 'lightline#ale#ok',
      \ 'gitbranch': 'gitbranch#name',
      \ 'modified': '%{&filetype == "help" ? "" : &modified ? "+" : &modifiable ? "" : "-"}',
      \ 'label': s:label
      \ }

