    \ 'colorscheme': 'PaperColor',
    \}
" Funci√≥n personalizada para obtener el path relativo del fichero.
function! LightLineFilename()
    let filename = expand('%:f') !=# '' ? expand('%:f') : '[No Name]'
    let modified = &modified ? ' +' : ''
    return filename . modified
	let name = ""
	let subs = split(expand('%'), "/")
	let i = 1
	for s in subs
		let parent = name
		if  i == len(subs)
			let name = parent . '/' . s
		elseif i == len(subs) - 1
			let name = parent . '/' . s
		elseif i == 1
			let name = s
		else
			let name = parent . '/' . strpart(s, 0, 4)
		endif
		let i += 1
	endfor
  return name
endfunction
function! LightLineReadonly()
    return &filetype =~ s:ignore_types || &readonly ? 'ÓÇ¢' :&filetype ==  ''
endfunction
function! LightLineModified()
    return &filetype !~s:ignore_types && &modified ? '+' : ''
endfunction

